@model IEnumerable<AdZZiM.Models.UserList>

@{
    ViewData["Title"] = "Lista użytkowników";
}

<h1>Użytkownicy</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Dodaj nowego użytkownika</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>Nazwa użytkownika</th>
            <th>Identyfikator (ID)</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.UserName)</td>
                <td><small class="text-muted">@item.Id</small></td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Szczegóły</a>
                    @if (User.Identity.Name != item.UserName)
                    {
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Usuń</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>