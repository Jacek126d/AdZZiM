@model Microsoft.AspNetCore.Identity.IdentityUser

@{
    ViewData["Title"] = "Usuwanie";
}

<h1>Usuń użytkownika</h1>

<h3>Czy na pewno usunąć uzytkownika?</h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Email / Login</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Usun" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
    </form>
</div>